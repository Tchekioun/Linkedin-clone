// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feed{
  id Int @id @default(autoincrement())
  body String
  createdAt DateTime @default(now())
  user_id Int
  userRelation User @relation(fields: [user_id], references: [id]) 
}

model User{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role Role @default(USER)
  Posts Feed[]
}

enum Role {
  ADMIN
  USER
  PREMIUM 
}
